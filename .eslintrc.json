{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "typescript",
    "typescript/react",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "unused-imports",
    "autofix"
  ],
  "root": true,
  "rules": {
    "@typescript-eslint/consistent-type-imports": [
      "error",
      {
        "prefer": "type-imports"
      }
    ],
    "@typescript-eslint/no-unused-vars": "off",
    "array-callback-return": "error",
    "autofix/arrow-body-style": [
      "error",
      "as-needed"
    ],
    "autofix/comma-dangle": [
      "error",
      "always-multiline"
    ],
    "autofix/curly": [
      "warn",
      "multi"
    ],
    "autofix/dot-notation": "warn",
    "autofix/eqeqeq": [
      "warn",
      "smart"
    ],
    "autofix/indent": [
      "warn",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "autofix/jsx-quotes": [
      "warn",
      "prefer-double"
    ],
    "autofix/linebreak-style": 1,
    "autofix/newline-per-chained-call": [
      "error",
      {
        "ignoreChainWithDepth": 2
      }
    ],
    "autofix/no-useless-catch": "warn",
    "autofix/no-useless-computed-key": "error",
    "autofix/no-useless-rename": "error",
    "autofix/no-useless-return": "error",
    "autofix/object-shorthand": "error",
    "autofix/prefer-arrow-callback": "warn",
    "autofix/prefer-const": "warn",
    "autofix/prefer-destructuring": 1,
    "autofix/prefer-numeric-literals": "warn",
    "autofix/prefer-object-spread": "warn",
    "autofix/prefer-spread": "warn",
    "autofix/prefer-template": "warn",
    "autofix/sort-imports": "warn",
    "autofix/sort-vars": "warn",
    "autofix/yoda": [
      "error",
      "never",
      {
        "onlyEquality": true
      }
    ],
    "brace-style": [
      "warn",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "no-alert": "off",
    "no-caller": "error",
    "no-console": "off",
    "no-constant-condition": [
      "error",
      {
        "checkLoops": false
      }
    ],
    "no-debugger": "warn",
    "no-duplicate-imports": "error",
    "no-else-return": "warn",
    "no-empty": [
      "warn",
      {
        "allowEmptyCatch": true
      }
    ],
    "no-eval": "error",
    "no-extend-native": "error",
    "no-extra-bind": "error",
    "no-extra-label": "warn",
    "no-extra-semi": "warn",
    "no-implied-eval": "error",
    "no-iterator": "error",
    "no-labels": "error",
    "no-lone-blocks": "error",
    "no-lonely-if": "warn",
    "no-mixed-spaces-and-tabs": "off",
    "no-multi-str": "error",
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "no-octal-escape": "error",
    "no-proto": "error",
    "no-prototype-builtins": "off",
    "no-script-url": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-undef-init": "error",
    "no-unmodified-loop-condition": "error",
    "no-unneeded-ternary": "warn",
    "no-unused-vars": "off",
    "no-use-before-define": [
      "error",
      "nofunc"
    ],
    "no-useless-call": "error",
    "no-useless-constructor": "error",
    "no-var": "off",
    "no-with": "error",
    "prefer-object-has-own": 1,
    "prefer-regex-literals": 1,
    "prefer-rest-params": "warn",
    "quotes": [
      "warn",
      "single",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ],
    "react/react-in-jsx-scope": 0,
    "react/self-closing-comp": [
      "warn",
      {
        "component": true,
        "html": true
      }
    ],
    "semi": [
      "warn",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "spaced-comment": "warn",
    "strict": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "args": "after-used",
        "argsIgnorePattern": "^_",
        "vars": "all",
        "varsIgnorePattern": "^_"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}